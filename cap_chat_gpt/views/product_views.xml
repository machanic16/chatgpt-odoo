<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cap_product_template_inherit_form" model="ir.ui.view">
            <field name="name">cap.product.template.inherit.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page string="AI assisted Description" >
                        <group>
                            <field name="ai_assisted_description"/>

                            
                        </group>
                        <group>
                            <button name="generate_description" string="Generate description" type="object"/>
                        </group>
                    </page>
                </xpath>
              
            </field>
        </record>


        

    </data>
</odoo>
